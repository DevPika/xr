{
  "plugin": [
    "typedoc-plugin-frontmatter",
    "./plugins/pretty-md.mjs",
    "typedoc-plugin-markdown"
  ],
  "entryPoints": [
    "./src/**"
  ],

  "flattenOutputFiles": true,
  "hideBreadcrumbs": true,
  "hidePageTitle": true,
  "cleanOutputDir": true,
  "hidePageHeader": true,

  "excludeExternals": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "excludeNotDocumented": true,

  "frontmatterGlobals": {
    "layout": "docs"
  },
  "out": "./docs",
}